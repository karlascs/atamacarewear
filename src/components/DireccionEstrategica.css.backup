/* Dirección Estratégica Section */
.direccion-estrategica {
  padding: 120px 0;
  background: linear-gradient(
    135deg,
    rgba(15, 23, 42, 0.95) 0%,
    rgba(30, 41, 59, 0.90) 50%,
    rgba(51, 65, 85, 0.85) 100%
  );
  position: relative;
  overflow: hidden;
}

.direccion-estrategica::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(34, 197, 94, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(245, 158, 11, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.direccion-estrategica .container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  position: relative;
  z-index: 2;
}

/* Header Styles */
.estrategia-header {
  text-align: center;
  margin-bottom: 80px;
  opacity: 0;
  transform: translateY(30px);
  transition: all 1s cubic-bezier(0.4, 0, 0.2, 1);
}

.estrategia-header.animate-in {
  opacity: 1;
  transform: translateY(0);
}

.header-decoration {
  display: flex;
  justify-content: center;
  margin-bottom: 1rem;
}

.sparkle-icon {
  width: 40px;
  height: 40px;
  color: var(--color-naranjo, #f59e0b);
  animation: sparkle 2s ease-in-out infinite;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 1rem;
}

.highlight-gradient {
  background: linear-gradient(135deg, #22c55e, #3b82f6, #8b5cf6);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-size: 300% 300%;
  animation: gradientShift 6s ease-in-out infinite;
}

.title-underline {
  width: 80px;
  height: 4px;
  background: linear-gradient(135deg, #22c55e, #3b82f6);
  margin: 0 auto;
  border-radius: 2px;
  transform: scaleX(0);
  transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.seccion-header.animate-in .title-underline {
  transform: scaleX(1);
}

.seccion-subtitle {
  font-size: 1.25rem;
  color: rgba(255, 255, 255, 0.8);
  max-width: 800px;
  margin: 0 auto;
  line-height: 1.6;
}

/* Grid Layout */
.estrategia-grid {
  display: grid;
  gap: 2rem;
  margin-bottom: 4rem;
  opacity: 0;
  transform: translateY(40px);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.3s;
}

.estrategia-grid.animate-in {
  opacity: 1;
  transform: translateY(0);
}

/* Strategy Cards */
.estrategia-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 1rem;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10px);
  position: relative;
  opacity: 0;
  transform: translateY(20px);
}

.estrategia-grid.animate-in .estrategia-card {
  animation: cardFadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.estrategia-grid.animate-in .estrategia-card:nth-child(1) {
  animation-delay: 0.1s;
}

.estrategia-grid.animate-in .estrategia-card:nth-child(2) {
  animation-delay: 0.2s;
}

.estrategia-grid.animate-in .estrategia-card:nth-child(3) {
  animation-delay: 0.3s;
}

.estrategia-grid.animate-in .estrategia-card:nth-child(4) {
  animation-delay: 0.4s;
}

@keyframes cardFadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.estrategia-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--card-color);
  transform: scaleX(0);
  transition: transform 0.4s ease;
}

.estrategia-card:hover::before,
.estrategia-card.active::before {
  transform: scaleX(1);
}

.estrategia-card:hover {
  transform: translateY(-4px);
  border-color: rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.1);
}

.estrategia-card.active {
  border-color: var(--card-color);
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.4),
    0 0 0 1px var(--card-color);
}

/* Card Header */
.card-header {
  padding: 2rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.card-header:hover {
  background: rgba(255, 255, 255, 0.05);
}

.header-content {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex: 1;
}

.icono-container {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--card-color), transparent);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  transition: all 0.3s ease;
}

.estrategia-card:hover .icono-container,
.estrategia-card.active .icono-container {
  background: var(--card-color);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  transform: scale(1.1);
}

.card-header h3 {
  font-size: 1.25rem;
  font-weight: 600;
  color: #ffffff;
  margin: 0;
  transition: color 0.3s ease;
}

.estrategia-card.active .card-header h3 {
  color: var(--card-color);
}

.toggle-icon {
  color: rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.estrategia-card.active .toggle-icon {
  color: var(--card-color);
}

/* Card Content */
.card-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-content.expanded {
  max-height: 1000px;
}

.contenido-wrapper {
  padding: 0 2rem 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.card-content p {
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.7;
  margin: 1.5rem 0 0;
  font-size: 1rem;
}

/* CTA Section */
.estrategia-cta {
  text-align: center;
  padding: 3rem;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.12));
  border-radius: 1.5rem;
  border: 1px solid rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  opacity: 0;
  transform: translateY(40px);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.6s;
}

.estrategia-cta.animate-in {
  opacity: 1;
  transform: translateY(0);
}

.cta-content h3 {
  font-size: 2rem;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 1rem;
}

.cta-content p {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 2rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.cta-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.btn {
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn:hover::before {
  left: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
  border: 2px solid transparent;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(34, 197, 94, 0.4);
}

.btn-outline {
  background: transparent;
  color: #ffffff;
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.btn-outline:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
}

/* Animations */
@keyframes gradientShift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

@keyframes sparkle {
  0%, 100% {
    transform: scale(1) rotate(0deg);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.2) rotate(180deg);
    opacity: 1;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .direccion-estrategica {
    padding: 4rem 0;
  }
  
  .direccion-estrategica .container {
    padding: 0 1rem;
  }
  
  .section-title {
    font-size: 2rem;
  }
  
  .seccion-subtitle {
    font-size: 1.1rem;
  }
  
  .card-header {
    padding: 1.5rem;
  }
  
  .header-content {
    gap: 0.75rem;
  }
  
  .card-header h3 {
    font-size: 1.1rem;
  }
  
  .contenido-wrapper {
    padding: 0 1.5rem 1.5rem;
  }
  
  .estrategia-cta {
    padding: 2rem 1.5rem;
  }
  
  .cta-content h3 {
    font-size: 1.5rem;
  }
  
  .cta-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .btn {
    padding: 0.875rem 1.5rem;
    font-size: 0.95rem;
  }
}

/* Additional Animations */
@keyframes sparkle {
  0%, 100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
  50% {
    transform: scale(1.1) rotate(180deg);
    opacity: 0.8;
  }
}

.estrategia-card.animate-in {
  opacity: 1;
  transform: translateY(0);
}

/* Intersection observer animations */
.estrategia-grid {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.estrategia-grid.animate-in {
  opacity: 1;
  transform: translateY(0);
}